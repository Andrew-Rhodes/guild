@using HRPortal.Models.Data
@model List<HRPortal.Models.Data.Application>
@{
    ViewBag.Title = "CompanyHome";
}

<h2>List of applicants for your company</h2>
@if (Model.Count > 0)
{
    <div class="row">
        <div class="col-xs-12">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Street Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Position Applied For</th>
                    <th>Application Number</th>
                    <th>Date Applied</th>
                </tr>
                </thead>

                <tbody>
                @foreach (var app in Model)
                {
                    <tr>
                        <td>@app.FirstName</td>
                        <td>@app.LastName</td>
                        <td>@app.StreetAddress</td>
                        <td>@app.City</td>
                        <td>@app.State</td>
                        <td>@app.Position</td>
                        <td>@app.ApplicationNumber</td>
                        <td>@app.TheDate</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <h3>No applications found</h3>
    <p>Try paying more...</p>
}