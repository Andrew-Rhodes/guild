@model List<Exercises.Models.Data.State>

@{
    ViewBag.Title = "States";
}

<div class="row">
    <div class="col-xs-12">
        <h3>States</h3>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-lg-12">
        <table class="table table-striped" style="width: 100%">
            <thead>
            <tr>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var state in Model)
            {
                <tr>
                    <td>@state.StateName</td>
                    <td>@state.StateAbbreviation</td>
                    <td>
                        @Html.ActionLink("Edit", "EditState", "Admin", new {ab = state.StateAbbreviation}, null) |
                        @Html.ActionLink("Delete", "DeleteState", "Admin", new {ab = state.StateAbbreviation}, null)
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    @Html.ActionLink("Add State", "AddState", "Admin", null, new {@class = "btn btn-primary", style = "margin-left: 15px;"})
</div>



