@model List<Exercises.Models.Data.Course>

@{
    ViewBag.Title = "Courses";
}

<div class="Row">
    <div class="col-xs-12">
        <h2>Courses</h2>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-lg-12">
        <table class="table table-striped" style="width: 100%;">
            <thead>
            <tr>
                <td>Course</td>
                <td></td>
            </tr>
            </thead>
            <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseName</td>
                    <td>
                        @Html.ActionLink("Edit", "EditCourse", "Admin", new {id = course.CourseId}, null) |
                        @Html.ActionLink("Delete", "DeleteCourse", "Admin", new {id = course.CourseId}, null)
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    @Html.ActionLink("Add Course", "AddCourse", "Admin", null, new {@class = "btn btn-primary", style = "margin-left: 15px;"})
</div>

